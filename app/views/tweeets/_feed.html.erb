<div class="column is-half">
  <% if user_signed_in? %>
    <article class="media box">
      <figure class="media-left">
        <p class="image is-64x64">
          <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
        </p>
      </figure>
      <div class="media-content">
        <%= render 'tweeets/form' %>
      </div>
    </article>
  <% end %>


  <% @tweeets.each do |tweeet| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= gravatar_image_tag(tweeet.user.email, size: 64, alt: tweeet.user.name) %>
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong><%= tweeet.user.name %></strong>
            <small class="">@<%= tweeet.user.username %></small><br/>

            <p><%= tweeet.tweeet %></p>
          </div>


          <small>
            <p><%= tweeet.likes.count %> <%= (tweeet.likes.count) == 1 ? 'Like' : 'Likes' %></p>
          </small>


          <% pre_like = tweeet.likes.find { |like| like.user_id == current_user.id } %>
          <% if pre_like %>
            <%= link_to 'Unlike', tweeet_like_path(tweeet.id, pre_like), remote: true, method: :delete %>
          <% else %>
            <%= link_to 'Like', tweeet_likes_path(tweeet.id), remote: true, method: :post %>
          <% end %>


          <%#= render 'comments/form' %>

          <section class="section comments">
            <div class="container">
              <h2 class="subtitle is-5"><strong><%= @tweeet.comments.count %></strong> Comments</h2>
              <%= render @tweeet.comments %>
              <div class="comment-form">
                <hr />
                <h3 class="subtitle is-3">Leave a reply</h3>
                <%= render 'comments/form' %>
              </div>
            </div>
          </section>





          <% if user_signed_in? && current_user.id == tweeet.user_id %>
            <nav class="level">
              <div class="level-right">
                <%= link_to edit_tweeet_path(tweeet), class: "level-item" do %>
                  <span class="edit"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <% end %>
                <%= link_to tweeet, method: :delete, data: {confirm: "Are you sure you want to delete this tweeet?"} do %>
                  <span class="del"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <% end %>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  <% end %>
</div>