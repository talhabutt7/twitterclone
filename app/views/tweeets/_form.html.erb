<%= form_for @tweeet do |f| %>

  <strong>Tweeet about it</strong><br/>
  <div class="field">
    <div class="control">
      <%= f.text_area :tweeet, rows: 5, :style => "width:100%", placeholder: "  Compose a new tweeet..." %>
    </div>
  </div>
  <%= f.submit 'Create Tweeet' , class: "button is-info" %>
<% end %>








